<resources>

    <!-- Base application theme. -->
    <style name="AppThemeToDelete" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.fullscreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@font/montserrat_family</item>
        <!--<item name="android:text">@style/MontserratTextViewStyle</item>-->
        <!--<item name="android:textViewStyle">@style/MontserratTextViewStyle</item>-->
        <!--<item name="android:buttonStyle">@style/MontserratTextStyle</item>-->
    </style>

    <style name="tasTitle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserrat_family</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tasSolTitleOne" parent="android:Widget.TextView">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">normal|bold</item>
    </style>

    <style name="tasSolId" parent="android:Widget.TextView">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">normal|bold</item>
        <item name="android:textColor">@color/phrase_two</item>
    </style>

    <style name="tasSolInfo" parent="android:Widget.TextView">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/phrase_one</item>
    </style>

    <style name="tasSolCont" parent="android:Widget.TextView">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/phrase_one</item>
    </style>

    <style name="tasHomeUser" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tasDashPhraseOne" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/phrase_one</item>
    </style>

    <style name="tasDashPhraseTwo" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/phrase_two</item>
    </style>

    <style name="tasDashPhraseThree" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/phrase_three</item>
    </style>

    <style name="tasLabel" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserrat_family</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">16dp</item>
    </style>

    <style name="tasContent" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserrat_family</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="tasContent14" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserrat_family</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="tasParagraph" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserrat_family</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="MontserratTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserrat_family</item>
    </style>

    <style name="MontserratButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/montserrat_family</item>
    </style>

    <style name="MontserratTextStyle" parent="">
        <item name="android:fontFamily">@font/montserrat_family</item>
    </style>


    <style name="ToolBarStyle" parent="ToolBarStyle.Base" />

    <style name="ToolBarStyle.Base" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ToolBarStyle.Event" parent="ToolBarStyle">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.Event.Toolbar.Title</item>
    </style>

    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--Any text styling can be done here-->
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

</resources>
