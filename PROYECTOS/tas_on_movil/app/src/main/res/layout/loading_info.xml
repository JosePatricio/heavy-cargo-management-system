<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loading_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        app:shimmer_duration="800"
        app:shimmer_auto_start="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="@dimen/placeholderTitleWidth"
                android:layout_height="@dimen/placeholderTextHeight"
                android:layout_marginTop="@dimen/padding_title_top"
                android:layout_marginBottom="@dimen/padding_title_bottom"
                android:background="@color/loading_background" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/placeholderTextHeight"
                android:background="@color/loading_background"
                android:paddingTop="@dimen/padding_title_top"
                android:paddingBottom="@dimen/padding_title_bottom" />

            <View
                android:layout_width="@dimen/placeholderTitleWidth"
                android:layout_height="@dimen/placeholderTextHeight"
                android:layout_marginTop="@dimen/padding_title_top"
                android:layout_marginBottom="@dimen/padding_title_bottom"
                android:background="@color/loading_background" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/placeholderTextHeight"
                android:background="@color/loading_background"
                android:paddingTop="@dimen/padding_title_top"
                android:paddingBottom="@dimen/padding_title_bottom" />

            <View
                android:layout_width="@dimen/placeholderTitleWidth"
                android:layout_height="@dimen/placeholderTextHeight"
                android:layout_marginTop="@dimen/padding_title_top"
                android:layout_marginBottom="@dimen/padding_title_bottom"
                android:background="@color/loading_background" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/placeholderTextHeight"
                android:background="@color/loading_background"
                android:paddingTop="@dimen/padding_title_top"
                android:paddingBottom="@dimen/padding_title_bottom" />

            <View
                android:layout_width="@dimen/placeholderTitleWidth"
                android:layout_height="@dimen/placeholderTextHeight"
                android:layout_marginTop="@dimen/padding_title_top"
                android:layout_marginBottom="@dimen/padding_title_bottom"
                android:background="@color/loading_background" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/placeholderTextHeight"
                android:background="@color/loading_background"
                android:paddingTop="@dimen/padding_title_top"
                android:paddingBottom="@dimen/padding_title_bottom" />

            <View
                android:layout_width="@dimen/placeholderTitleWidth"
                android:layout_height="@dimen/placeholderTextHeight"
                android:layout_marginTop="@dimen/padding_title_top"
                android:layout_marginBottom="@dimen/padding_title_bottom"
                android:background="@color/loading_background" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/placeholderTextHeight"
                android:background="@color/loading_background"
                android:paddingTop="@dimen/padding_title_top"
                android:paddingBottom="@dimen/padding_title_bottom" />

        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</ScrollView>

